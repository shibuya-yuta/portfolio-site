---
import HeaderMenu from "@components/HeaderMenu.svelte";
import Footer from "@components/Footer.astro";
import { path } from "@lib/utils/path";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "PORTFOILO SITE of SHIBUYA" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="澁谷のポートフォリオサイト" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href={path("favicon.svg")} />

    <!-- css reset -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/destyle.css@4.0.0/destyle.min.css"
    />

    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Potta+One&display=swap"
      rel="stylesheet"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@200;300;400;500;600;700;900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body>
    <HeaderMenu client:only="svelte" />
    <slot />
    <Footer />
  </body><style is:global lang="scss">
    :root {
      --base-color-black: rgba(0, 0, 0, 1);
      --base-color-white: rgba(255, 255, 255, 1);
      --main-color: rgba(46, 212, 230, 1);
      --accent-color: rgba(255, 227, 21, 1);
      --header-height: 76px;
      --title-font: "Potta One", sans-serif;
      --main-font: "Noto Serif JP", serif;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  </style>
</html>
