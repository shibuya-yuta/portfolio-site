---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div>
  <h1 class="title">{title}</h1>
</div>

<style lang="scss">
  .title {
    font-size: 2rem;
    font-family: var(--main-font);
    font-weight: bolder;
    position: relative;
    container-type: inline-size;

    &::after {
      content: "";
      display: block;
      margin-top: 5px;
      height: 4px;
      background: -webkit-linear-gradient(to right, var(--main-color), #000);
      background: linear-gradient(to right, var(--main-color), #000);
    }
  }

  @media (max-width: 425px) {
    .title {
      font-size: 1.3rem;
    }
  }
</style>
